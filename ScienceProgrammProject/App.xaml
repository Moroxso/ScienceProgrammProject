<Application x:Class="ScienceProgrammProject.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ScienceProgrammProject"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Стиль для кнопок панели инструментов -->
            <Style x:Key="WebLikeToolbarButton" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#34495e"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- Стиль для карточек -->
            <Style x:Key="ModernCard" TargetType="Border">
                <Setter Property="Background" Value="White"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="BorderBrush" Value="#e0e0e0"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="20"/>
                <Setter Property="Margin" Value="10"/>
            </Style>

            <!-- Стиль для текстовых полей в карточках -->
            <Style x:Key="ModernTextBox" TargetType="TextBox">
                <Setter Property="Height" Value="40"/>
                <Setter Property="Padding" Value="10"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="#bdc3c7"/>
                <Setter Property="Background" Value="White"/>
            </Style>

            <!-- Стиль для кнопок действий -->
            <Style x:Key="ActionButton" TargetType="Button">
                <Setter Property="Height" Value="40"/>
                <Setter Property="Padding" Value="20,5"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
            </Style>

            <!-- Конкретные цвета для кнопок -->
            <Style x:Key="PrimaryButton" BasedOn="{StaticResource ActionButton}" TargetType="Button">
                <Setter Property="Background" Value="#3498db"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#2980b9"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="SuccessButton" BasedOn="{StaticResource ActionButton}" TargetType="Button">
                <Setter Property="Background" Value="#27ae60"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#219a52"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="DangerButton" BasedOn="{StaticResource ActionButton}" TargetType="Button">
                <Setter Property="Background" Value="#e74c3c"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="#c0392b"/>
                    </Trigger>
                </Style.Triggers>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
