<Page x:Class="ScienceProgrammProject.UI.Pages.OrdersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ScienceProgrammProject.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrdersPage">

    <Grid Background="#ecf0f1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок и кнопки -->
        <Border Grid.Row="0" Background="White" Padding="20" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Text="Управление заказами" 
                          FontSize="20" 
                          FontWeight="Bold"
                          Foreground="#2c3e50"
                          VerticalAlignment="Center"/>

                <Button x:Name="btnCreateOrder" 
                        Grid.Column="1" 
                        Width="120"
                        Content="➕ Создать заказ" 
                        Style="{StaticResource AnimatedSuccessButton}"
                        Click="btnCreateOrder_Click"/>
            </Grid>
        </Border>

        <!-- Список заказов -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
            <ItemsControl x:Name="OrdersItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" CornerRadius="8" Padding="20" Margin="10" BorderThickness="1" BorderBrush="#e0e0e0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Информация о заказе -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding nameconference}" 
                       FontSize="16" 
                       FontWeight="Bold"
                       Foreground="#2c3e50"/>
                                    <TextBlock Text="{Binding datecreation, StringFormat='Дата создания: {0:dd.MM.yyyy}'}" 
                       Foreground="#7f8c8d"
                       Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding equipment, StringFormat='Оборудование: {0}'}" 
                       Foreground="#7f8c8d"/>
                                    <TextBlock Text="{Binding amountguests, StringFormat='Гостей: {0}'}" 
                       Foreground="#7f8c8d"/>
                                </StackPanel>

                                <!-- Статусы -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0">
                                    <Border Background="#3498db" CornerRadius="4" Padding="8,4" Margin="0,0,0,5">
                                        <TextBlock Text="{Binding orderstatus}" 
                           Foreground="White" 
                           FontWeight="Bold"
                           FontSize="12"/>
                                    </Border>
                                    <Border Background="#f1c40f" CornerRadius="4" Padding="8,4">
                                        <TextBlock Text="{Binding paymentstatus}" 
                           Foreground="White" 
                           FontWeight="Bold"
                           FontSize="12"/>
                                    </Border>
                                </StackPanel>

                                <!-- Кнопка редактирования -->
                                <Border Grid.Column="2" CornerRadius="4" Background="#3498db">
                                    <Button Content="✏️ Редактировать" 
                                            Style="{StaticResource AnimatedPrimaryButton}"
                                            Width="160"
                                    Background="Transparent"
                                    Foreground="White"
                                    Height="35"
                                    Padding="10,0"
                                    FontSize="12"
                                    FontWeight="SemiBold"
                                    BorderThickness="0"
                                    Cursor="Hand"
                                    Click="EditOrder_Click"
                                    Tag="{Binding orderid}"/>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <!-- Сообщение если нет заказов -->
        <TextBlock x:Name="txtNoOrders" 
                   Grid.Row="1"
                   Text="Нет доступных заказов" 
                   FontSize="16"
                   Foreground="#7f8c8d"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="Collapsed"/>
    </Grid>
</Page>
