<Page x:Class="ScienceProgrammProject.UI.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ScienceProgrammProject.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="#ecf0f1">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Основная карточка авторизации -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="10"
                Padding="40"
                Margin="50"
                BorderBrush="#bdc3c7"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="400">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="20"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок -->
                <TextBlock Grid.Row="0" 
                           Text="Вход в систему" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="#2c3e50"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <!-- Поле логина -->
                <TextBox x:Name="txtLogin" 
                         Grid.Row="2" 
                         Height="40" 
                         Padding="10"
                         FontSize="14"
                         BorderBrush="#bdc3c7"
                         BorderThickness="1"

                         VerticalContentAlignment="Center">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="BorderBrush" Value="#3498db"/>
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="#2980b9"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Плейсхолдер для логина -->
                <TextBlock Grid.Row="2" 
                           Text="Логин" 
                           Foreground="#95a5a6" 
                           FontSize="14"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Text, ElementName=txtLogin}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Text, ElementName=txtLogin}" Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Поле пароля -->
                <PasswordBox x:Name="txtPassword" 
                             Grid.Row="4" 
                             Height="40" 
                             Padding="10"
                             FontSize="14"
                             BorderBrush="#bdc3c7"
                             BorderThickness="1"

                             VerticalContentAlignment="Center">
                    <PasswordBox.Style>
                        <Style TargetType="PasswordBox">
                            <Setter Property="Background" Value="White"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="BorderBrush" Value="#3498db"/>
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter Property="BorderBrush" Value="#2980b9"/>
                                    <Setter Property="BorderThickness" Value="2"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </PasswordBox.Style>
                </PasswordBox>

                <!-- Плейсхолдер для пароля -->
                <TextBlock Grid.Row="4" 
                           Text="Пароль" 
                           Foreground="#95a5a6" 
                           FontSize="14"
                           Margin="10,0,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Password, ElementName=txtPassword}" Value="">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>

                <!-- Сообщение об ошибке -->
                <TextBlock x:Name="txtError" 
                           Grid.Row="6" 
                           Text="" 
                           Foreground="#e74c3c" 
                           FontSize="12"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"
                           HorizontalAlignment="Center"/>

                <!-- Кнопка входа -->
                <Button x:Name="btnLogin" 
                        Grid.Row="8" 
                        Content="Войти" 
                        Height="45" 
                        Background="#3498db" 
                        Foreground="White" 
                        FontSize="16" 
                        FontWeight="Bold"
                        BorderThickness="0"

                        Cursor="Hand"
                        Click="btnLogin_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#3498db"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2980b9"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter Property="Background" Value="#bdc3c7"/>
                                    <Setter Property="Foreground" Value="#7f8c8d"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Индикатор загрузки -->
        <Border x:Name="loadingOverlay" 
                Grid.Row="0" Grid.RowSpan="3" 
                Background="#80000000" 
                Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True" 
                           Width="100" 
                           Height="10" 
                           Margin="0,0,0,20"/>
                <TextBlock Text="Проверка данных..." 
                           Foreground="White" 
                           FontSize="14"
                           HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
