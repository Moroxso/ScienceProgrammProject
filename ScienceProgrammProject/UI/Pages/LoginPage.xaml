<Page x:Class="ScienceProgrammProject.UI.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ScienceProgrammProject.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="#ecf0f1">
        <!-- Центральная карточка авторизации -->
        <Border Background="White" 
                CornerRadius="12"
                Padding="50"
                Width="450"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="#e0e0e0"
                BorderThickness="1">

            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="20" Opacity="0.1"/>
            </Border.Effect>

            <StackPanel>

                <!-- Логотип и заголовок -->
                <StackPanel HorizontalAlignment="Center" Margin="0,0,0,30">
                    <TextBlock Text="🎯" 
                               FontSize="32"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="Конференции+" 
                               FontSize="22" 
                               FontWeight="Bold" 
                               Foreground="#2c3e50"
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="Система управления научными конференциями"
                               FontSize="12"
                               Foreground="#7f8c8d"
                               HorizontalAlignment="Center"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Поле логина -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Логин" 
                               Foreground="#2c3e50" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <Border CornerRadius="6" 
                            BorderThickness="1" 
                            BorderBrush="#bdc3c7"
                            Background="White">
                        <TextBox x:Name="txtLogin" 
                                 Padding="12" 
                                 FontSize="14" 
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalContentAlignment="Center"/>
                    </Border>
                </StackPanel>

                <!-- Поле пароля -->
                <StackPanel Margin="0,0,0,25">
                    <TextBlock Text="Пароль" 
                               Foreground="#2c3e50" 
                               FontSize="14"
                               FontWeight="SemiBold"
                               Margin="0,0,0,8"/>

                    <Border CornerRadius="6" 
                            BorderThickness="1" 
                            BorderBrush="#bdc3c7"
                            Background="White">
                        <PasswordBox x:Name="txtPassword" 
                                     Padding="12" 
                                     FontSize="14" 
                                     BorderThickness="0"
                                     Background="Transparent"
                                     VerticalContentAlignment="Center"/>
                    </Border>
                </StackPanel>

                <!-- Сообщение об ошибке -->
                <TextBlock x:Name="txtError" 
                           Text="" 
                           Foreground="#e74c3c" 
                           FontSize="12"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,15"/>

                <!-- Кнопка входа -->
                <Border CornerRadius="6" 
                        Background="#3498db">
                    <Button x:Name="btnLogin" 
                            Content="Войти в систему" 
                            Background="Transparent"
                            Foreground="White" 
                            Height="48"
                            FontSize="16" 
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="btnLogin_Click">

                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Transparent"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#2980b9"/>
                                    </Trigger>
                                    <Trigger Property="IsEnabled" Value="False">
                                        <Setter Property="Background" Value="#bdc3c7"/>
                                        <Setter Property="Foreground" Value="#7f8c8d"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </Border>

                <!-- Подсказка -->
                <TextBlock Text="Для доступа к системе обратитесь к администратору"
                           FontSize="11"
                           Foreground="#95a5a6"
                           HorizontalAlignment="Center"
                           Margin="0,20,0,0"/>

            </StackPanel>
        </Border>

        <!-- Индикатор загрузки -->
        <Border x:Name="loadingOverlay" 
                Background="#80000000" 
                Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border Background="White" 
                        CornerRadius="8" 
                        Padding="30,25">
                    <StackPanel>
                        <ProgressBar IsIndeterminate="True" 
                                   Width="120" 
                                   Height="6" 
                                   Margin="0,0,0,15"/>
                        <TextBlock Text="Выполняется вход..." 
                                   Foreground="#2c3e50" 
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Page>
