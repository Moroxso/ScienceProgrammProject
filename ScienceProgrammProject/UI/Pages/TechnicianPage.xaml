<Page x:Class="ScienceProgrammProject.UI.Pages.TechnicianPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ScienceProgrammProject.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TechnicianPage">

    <Grid Background="#ecf0f1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="White" Padding="20" Margin="10">
            <TextBlock Text="Заказы для подготовки" 
                      FontSize="20" 
                      FontWeight="Bold"
                      Foreground="#2c3e50"/>
        </Border>

        <!-- Список заказов с действиями -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
            <ItemsControl x:Name="TechnicianOrdersItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" CornerRadius="8" Padding="20" Margin="10" BorderThickness="1" BorderBrush="#e0e0e0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Информация о заказе -->
                                <StackPanel Grid.Row="0">
                                    <TextBlock Text="{Binding nameconference}" 
                                               FontSize="16" 
                                               FontWeight="Bold"
                                               Foreground="#2c3e50"/>
                                    <TextBlock Text="{Binding equipment, StringFormat='Оборудование: {0}'}" 
                                               Foreground="#7f8c8d"
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding amountguests, StringFormat='Количество гостей: {0}'}" 
                                               Foreground="#7f8c8d"/>
                                </StackPanel>

                                <!-- Статусы -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10,0,0">
                                    <Border x:Name="statusBorder" 
                                            CornerRadius="4" 
                                            Padding="8,4">
                                        <TextBlock Text="{Binding orderstatus}" 
                                                   Foreground="White" 
                                                   FontWeight="Bold"/>
                                    </Border>

                                    <Border x:Name="paymentBorder"
                                            CornerRadius="4" 
                                            Padding="8,4" 
                                            Margin="10,0,0,0">
                                        <TextBlock Text="{Binding paymentstatus}" 
                                                   Foreground="White" 
                                                   FontWeight="Bold"/>
                                    </Border>
                                </StackPanel>

                                <!-- Кнопки действий -->
                                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,15,0,0">
                                    <Button x:Name="btnInProgress" 
                                            Content="В работе" 
                                            Background="#3498db"
                                            Foreground="White"
                                            Height="35"
                                            Padding="15,5"
                                            FontWeight="SemiBold"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Click="MarkAsInProgress"
                                            Tag="{Binding orderid}"/>

                                    <Button x:Name="btnReady" 
                                            Content="Готов" 
                                            Background="#27ae60"
                                            Foreground="White"
                                            Height="35"
                                            Padding="15,5"
                                            FontWeight="SemiBold"
                                            BorderThickness="0"
                                            Cursor="Hand"
                                            Click="MarkAsReady"
                                            Tag="{Binding orderid}"
                                            Margin="10,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Сообщение если нет заказов -->
        <TextBlock x:Name="txtNoTechnicianOrders" 
                   Grid.Row="1"
                   Text="Нет заказов для подготовки" 
                   FontSize="16"
                   Foreground="#7f8c8d"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="Collapsed"/>
    </Grid>
</Page>
