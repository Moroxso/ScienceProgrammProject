<Window x:Class="ScienceProgrammProject.UI.Windows.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScienceProgrammProject.UI.Windows"
        mc:Ignorable="d"
        Title="Добавление нового сотрудника" Height="800" Width="500" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,10">
            <TextBlock Text="Добавление нового сотрудника" 
                      FontSize="18" 
                      FontWeight="Bold"
                      Foreground="#2c3e50"
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Форма -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="30">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- ФИО -->
                    <TextBlock Text="Фамилия*" FontWeight="SemiBold" Foreground="#2c3e50"/>
                    <Border CornerRadius="4" BorderThickness="1" BorderBrush="#bdc3c7" Margin="0,5,0,15">
                        <TextBox x:Name="txtLastName" 
                                Padding="10" 
                                FontSize="14" 
                                BorderThickness="0"
                                Background="Transparent"/>
                    </Border>

                    <TextBlock Text="Имя*" FontWeight="SemiBold" Foreground="#2c3e50"/>
                    <Border CornerRadius="4" BorderThickness="1" BorderBrush="#bdc3c7" Margin="0,5,0,15">
                        <TextBox x:Name="txtFirstName" 
                                Padding="10" 
                                FontSize="14" 
                                BorderThickness="0"
                                Background="Transparent"/>
                    </Border>

                    <TextBlock Text="Отчество*" FontWeight="SemiBold" Foreground="#2c3e50"/>
                    <Border CornerRadius="4" BorderThickness="1" BorderBrush="#bdc3c7" Margin="0,5,0,15">
                        <TextBox x:Name="txtMiddleName" 
                                Padding="10" 
                                FontSize="14" 
                                BorderThickness="0"
                                Background="Transparent"/>
                    </Border>

                    <!-- Логин и пароль -->
                    <TextBlock Text="Логин*" FontWeight="SemiBold" Foreground="#2c3e50"/>
                    <Border CornerRadius="4" BorderThickness="1" BorderBrush="#bdc3c7" Margin="0,5,0,15">
                        <TextBox x:Name="txtLogin" 
                                Padding="10" 
                                FontSize="14" 
                                BorderThickness="0"
                                Background="Transparent"/>
                    </Border>

                    <TextBlock Text="Пароль*" FontWeight="SemiBold" Foreground="#2c3e50"/>
                    <Border CornerRadius="4" BorderThickness="1" BorderBrush="#bdc3c7" Margin="0,5,0,15">
                        <PasswordBox x:Name="txtPassword" 
                                    Padding="10" 
                                    FontSize="14" 
                                    BorderThickness="0"
                                    Background="Transparent"/>
                    </Border>

                    <!-- Роль -->
                    <TextBlock Text="Роль*" FontWeight="SemiBold" Foreground="#2c3e50"/>
                    <Border CornerRadius="4" BorderThickness="1" BorderBrush="#bdc3c7" Margin="0,5,0,15">
                        <ComboBox x:Name="cmbRole" 
                                 Padding="10" 
                                 FontSize="14" 
                                 BorderThickness="0"
                                 Background="Transparent">
                            <ComboBoxItem Content="Заведующий подразделением" Tag="1"/>
                            <ComboBoxItem Content="Организатор" Tag="2" IsSelected="True"/>
                            <ComboBoxItem Content="Техник" Tag="3"/>
                        </ComboBox>
                    </Border>

                    <!-- Генерация пароля -->
                    <Border Background="#f8f9fa" CornerRadius="4" Padding="10" Margin="0,10,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                      Text="Сгенерировать случайный пароль" 
                                      Foreground="#2c3e50"
                                      FontSize="12"
                                      VerticalAlignment="Center"/>

                            <Border Grid.Column="1" CornerRadius="4" Background="#3498db">
                                <Button x:Name="btnGeneratePassword" 
                                        Content="🎲 Сгенерировать" 
                                        Style="{StaticResource AnimatedPrimaryButton}"
                                        Background="Transparent"
                                        Foreground="White"
                                        Height="30"
                                        Width="160"
                                        Padding="10,0"
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Click="btnGeneratePassword_Click"/>
                            </Border>
                        </Grid>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Кнопки -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1" CornerRadius="4" Background="#95a5a6" Margin="0,0,10,0">
                <Button x:Name="btnCancel" 
                        Content="Отмена" 
                        Style="{StaticResource AnimatedSecondaryButton}"
                        Width="100"
                        Background="Transparent"
                        Foreground="White"
                        Height="40"
                        Padding="20,0"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnCancel_Click"/>
            </Border>

            <Border Grid.Column="2" CornerRadius="4" Background="#27ae60">
                <Button x:Name="btnAdd" 
                        Content="Добавить сотрудника" 
                        Style="{StaticResource AnimatedSuccessButton}"
                        Background="Transparent"
                        Foreground="White"
                        Width="180"
                        Height="40"
                        Padding="20,0"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnAdd_Click"/>
            </Border>
        </Grid>
    </Grid>
</Window>
