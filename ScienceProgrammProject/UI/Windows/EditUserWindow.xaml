<Window x:Class="ScienceProgrammProject.UI.Windows.EditUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScienceProgrammProject.UI.Windows"
        mc:Ignorable="d"
        Title="Редактирование сотрудника" Height="800" Width="800"         WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,10">
            <TextBlock x:Name="txtTitle" 
                      Text="Редактирование сотрудника" 
                      FontSize="18" 
                      FontWeight="Bold"
                      Foreground="#2c3e50"
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Форма -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="30">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- ФИО -->
                    <Grid Style="{StaticResource InputField}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Фамилия*" FontWeight="SemiBold" Foreground="#2c3e50"/>
                        <Border Grid.Row="1" CornerRadius="4" BorderThickness="1" BorderBrush="#bdc3c7" Margin="0,5,0,0">
                            <TextBox x:Name="txtLastName" Style="{StaticResource ModernTextBox}"/>
                        </Border>
                    </Grid>

                    <Grid Style="{StaticResource InputField}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Имя*" FontWeight="SemiBold" Foreground="#2c3e50"/>
                        <Border Grid.Row="1" CornerRadius="4" BorderThickness="1" BorderBrush="#bdc3c7" Margin="0,5,0,0">
                            <TextBox x:Name="txtFirstName" Style="{StaticResource ModernTextBox}"/>
                        </Border>
                    </Grid>

                    <Grid Style="{StaticResource InputField}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Отчество*" FontWeight="SemiBold" Foreground="#2c3e50"/>
                        <Border Grid.Row="1" CornerRadius="4" BorderThickness="1" BorderBrush="#bdc3c7" Margin="0,5,0,0">
                            <TextBox x:Name="txtMiddleName" Style="{StaticResource ModernTextBox}"/>
                        </Border>
                    </Grid>

                    <!-- Логин -->
                    <Grid Style="{StaticResource InputField}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Логин*" FontWeight="SemiBold" Foreground="#2c3e50"/>
                        <Border Grid.Row="1" CornerRadius="4" BorderThickness="1" BorderBrush="#bdc3c7" Margin="0,5,0,0">
                            <TextBox x:Name="txtLogin" Style="{StaticResource ModernTextBox}"/>
                        </Border>
                    </Grid>

                    <!-- Пароль -->
                    <Grid Style="{StaticResource InputField}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Пароль" FontWeight="SemiBold" Foreground="#2c3e50"/>
                        <Border Grid.Row="1" CornerRadius="4" BorderThickness="1" BorderBrush="#bdc3c7" Margin="0,5,0,0">
                            <PasswordBox x:Name="txtPassword" 
                                        Padding="10" 
                                        FontSize="14" 
                                        BorderThickness="0"
                                        Background="Transparent"/>
                        </Border>
                        <TextBlock Grid.Row="1" 
                                  Text="Оставьте пустым, чтобы не менять пароль" 
                                  Foreground="#95a5a6" 
                                  FontSize="11"
                                  Margin="0,45,0,0"
                                  HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- Роль -->
                    <Grid Style="{StaticResource InputField}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Роль*" FontWeight="SemiBold" Foreground="#2c3e50"/>
                        <Border Grid.Row="1" CornerRadius="4" BorderThickness="1" BorderBrush="#bdc3c7" Margin="0,5,0,0">
                            <ComboBox x:Name="cmbRole" 
                                     Padding="10" 
                                     FontSize="14" 
                                     BorderThickness="0"
                                     Background="Transparent">
                                <ComboBoxItem Content="Заведующий подразделением" Tag="1"/>
                                <ComboBoxItem Content="Организатор" Tag="2"/>
                                <ComboBoxItem Content="Техник" Tag="3"/>
                            </ComboBox>
                        </Border>
                    </Grid>

                    <!-- Статус -->
                    <Grid Style="{StaticResource InputField}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Статус" FontWeight="SemiBold" Foreground="#2c3e50"/>
                        <Border Grid.Row="1" CornerRadius="4" BorderThickness="1" BorderBrush="#bdc3c7" Margin="0,5,0,0">
                            <ComboBox x:Name="cmbStatus" 
                                     Padding="10" 
                                     FontSize="14" 
                                     BorderThickness="0"
                                     Background="Transparent">
                                <ComboBoxItem Content="Активен" Tag=""/>
                                <ComboBoxItem Content="Уволен" Tag="уволен"/>
                            </ComboBox>
                        </Border>
                    </Grid>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Кнопки -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1" CornerRadius="4" Background="#95a5a6" Margin="0,0,10,0">
                <Button Content="Отмена" 
                        Style="{StaticResource AnimatedSecondaryButton}"
                        Width="120"
                        Click="btnCancel_Click"/>
            </Border>

            <Border Grid.Column="2" CornerRadius="4" Background="#27ae60">
                <Button Content="Сохранить" 
                        Style="{StaticResource AnimatedSuccessButton}"
                        Width="120"
                        Click="btnSave_Click"/>
            </Border>
        </Grid>
    </Grid>
</Window>
