<Window x:Class="ScienceProgrammProject.UI.Windows.TechnicianOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScienceProgrammProject.UI.Windows"
        mc:Ignorable="d"
        Title="Управление подготовкой заказа" Height="500" Width="800"         WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,10">
            <TextBlock Text="Управление подготовкой заказа" 
                      FontSize="18" 
                      FontWeight="Bold"
                      Foreground="#2c3e50"
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Информация о заказе -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="25">
            <StackPanel>

                <!-- Основная информация -->
                <TextBlock x:Name="txtConferenceName" 
                          FontSize="16" 
                          FontWeight="Bold"
                          Foreground="#2c3e50"
                          TextWrapping="Wrap"
                          Margin="0,0,0,10"/>

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Оборудование:" FontWeight="SemiBold" Foreground="#2c3e50"/>
                        <TextBlock x:Name="txtEquipment" Foreground="#7f8c8d" Margin="0,2,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Количество гостей:" FontWeight="SemiBold" Foreground="#2c3e50"/>
                        <TextBlock x:Name="txtGuestsCount" Foreground="#7f8c8d" Margin="0,2,0,0"/>
                    </StackPanel>
                </Grid>

                <Separator Background="#bdc3c7" Margin="0,0,0,15"/>

                <!-- Текущий статус -->
                <TextBlock Text="Текущий статус:" FontWeight="SemiBold" Foreground="#2c3e50"/>
                <Border x:Name="borderCurrentStatus" 
                        CornerRadius="4" 
                        Padding="10,5" 
                        Margin="0,5,0,15">
                    <TextBlock x:Name="txtCurrentStatus" 
                              FontWeight="Bold"
                              Foreground="White"
                              HorizontalAlignment="Center"/>
                </Border>

                <!-- Изменение статуса -->
                <TextBlock Text="Изменить статус:" FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Border CornerRadius="4" Background="#3498db" Margin="0,0,10,0">
                        <Button x:Name="btnMarkInProgress" 
                                Content="🔄 Взять в работу" 
                                Style="{StaticResource AnimatedPrimaryButton}"
                                Width="160"
                                Background="Transparent"
                                Foreground="White"
                                Height="40"
                                Padding="15,0"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="btnMarkInProgress_Click"/>
                    </Border>

                    <Border CornerRadius="4" Background="#27ae60">
                        <Button x:Name="btnMarkReady" 
                                Content="✅ Завершить подготовку" 
                                Style="{StaticResource AnimatedSuccessButton}"
                                Width="200"
                                Background="Transparent"
                                Foreground="White"
                                Height="40"
                                Padding="15,0"
                                FontWeight="SemiBold"
                                BorderThickness="0"
                                Cursor="Hand"
                                Click="btnMarkReady_Click"/>
                    </Border>
                </StackPanel>

            </StackPanel>
        </Border>

        <!-- Кнопки -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1" CornerRadius="4" Background="#95a5a6">
                <Button x:Name="btnClose" 
                        Content="Закрыть" 
                        Style="{StaticResource AnimatedSecondaryButton}"
                        Width="120"
                        Background="Transparent"
                        Foreground="White"
                        Height="40"
                        Padding="20,0"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnClose_Click"/>
            </Border>
        </Grid>
    </Grid>
</Window>
