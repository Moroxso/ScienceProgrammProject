<Window x:Class="ScienceProgrammProject.UI.Windows.CreateOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScienceProgrammProject.UI.Windows"
        mc:Ignorable="d"
        Title="Создание заказа" Height="450" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        >
    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,10">
            <TextBlock Text="Создание нового заказа" 
                      FontSize="18" 
                      FontWeight="Bold"
                      Foreground="#2c3e50"
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Форма -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Название конференции -->
                <TextBlock Grid.Row="0" Text="Название конференции*" FontWeight="SemiBold" Foreground="#2c3e50"/>
                <Border Grid.Row="1" CornerRadius="4" BorderThickness="1" BorderBrush="#bdc3c7">
                    <TextBox x:Name="txtConferenceName" 
                            Padding="10" 
                            FontSize="14" 
                            BorderThickness="0"
                            Background="Transparent"/>
                </Border>

                <!-- Оборудование -->
                <TextBlock Grid.Row="2" Text="Требуемое оборудование*" FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,10,0,0"/>
                <Border Grid.Row="3" CornerRadius="4" BorderThickness="1" BorderBrush="#bdc3c7">
                    <TextBox x:Name="txtEquipment" 
                            Padding="10" 
                            FontSize="14" 
                            BorderThickness="0"
                            Background="Transparent"/>
                </Border>

                <!-- Количество гостей -->
                <TextBlock Grid.Row="4" Text="Количество гостей*" FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,10,0,0"/>
                <Border Grid.Row="5" CornerRadius="4" BorderThickness="1" BorderBrush="#bdc3c7">
                    <TextBox x:Name="txtGuestsCount" 
                            Padding="10" 
                            FontSize="14" 
                            BorderThickness="0"
                            Background="Transparent"
                            Text="0"/>
                </Border>

                <!-- Статус оплаты -->
                <TextBlock Grid.Row="6" Text="Статус оплаты*" FontWeight="SemiBold" Foreground="#2c3e50" Margin="0,10,0,0"/>
                <Border Grid.Row="7" CornerRadius="4" BorderThickness="1" BorderBrush="#bdc3c7" Margin="0,5,0,0">
                    <ComboBox x:Name="cmbPaymentStatus" 
                             Padding="10" 
                             FontSize="14" 
                             BorderThickness="0"
                             Background="Transparent">
                        <ComboBoxItem Content="принят" IsSelected="True"/>
                        <ComboBoxItem Content="оплачен"/>
                    </ComboBox>
                </Border>
            </Grid>
        </Border>

        <!-- Кнопки -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1" CornerRadius="4" Background="#95a5a6" Margin="0,0,10,0">
                <Button x:Name="btnCancel" 
                        Content="Отмена" 
                        Style="{StaticResource AnimatedSecondaryButton}"
                        Width="100"
                        Background="Transparent"
                        Foreground="White"
                        Height="40"
                        Padding="20,0"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnCancel_Click"/>
            </Border>

            <Border Grid.Column="2" CornerRadius="4" Background="#27ae60">
                <Button x:Name="btnCreate" 
                        Content="Создать заказ" 
                        Background="Transparent"
                        Foreground="White"
                        Height="40"
                        Padding="20,0"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnCreate_Click"/>
            </Border>
        </Grid>
    </Grid>
</Window>
