<Window x:Class="ScienceProgrammProject.UI.Windows.AssignToShiftWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScienceProgrammProject.UI.Windows"
        mc:Ignorable="d"
        Title="AssignToShiftWindow" Height="600" Width="800"        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Background="#ecf0f1" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtTitle" 
                          Text="Назначение сотрудников на смену" 
                          FontSize="18" 
                          FontWeight="Bold"
                          Foreground="#2c3e50"
                          VerticalAlignment="Center"/>

                <Border Grid.Column="1" CornerRadius="4" Background="#3498db" Padding="8,4">
                    <TextBlock x:Name="txtShiftInfo" 
                              Text="Смена #0" 
                              Foreground="White" 
                              FontWeight="Bold"/>
                </Border>
            </Grid>
        </Border>

        <!-- Основной контент -->
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Доступные сотрудники -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Доступные сотрудники" 
                              FontSize="16" 
                              FontWeight="Bold"
                              Foreground="#2c3e50"
                              Margin="0,0,0,10"/>

                    <ListView x:Name="lstAvailableUsers" 
                             Grid.Row="1" 
                             BorderThickness="0"
                             Background="Transparent">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#f8f9fa" CornerRadius="4" Padding="10" Margin="0,2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding lastname}" 
                                                       FontWeight="SemiBold"
                                                       Foreground="#2c3e50"/>
                                            <TextBlock Foreground="#7f8c8d" FontSize="12">
                                                <Run Text="{Binding firstname}"/>
                                                <Run Text=" "/>
                                                <Run Text="{Binding middlename}"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding userrole.namerole}" 
                                                       Foreground="#3498db"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"/>
                                        </StackPanel>

                                        <Border Grid.Column="1" CornerRadius="4" Background="#27ae60">
                                            <Button Content="➕ Добавить" 
                                                    Background="Transparent"
                                                    Foreground="White"
                                                    Height="25"
                                                    Padding="8,0"
                                                    FontSize="11"
                                                    FontWeight="SemiBold"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    Click="AddToShift_Click"
                                                    Tag="{Binding userid}"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <!-- Разделитель -->
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="#bdc3c7"/>

            <!-- Сотрудники на смене -->
            <Border Grid.Column="2" Background="White" CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Сотрудники на смене" 
                              FontSize="16" 
                              FontWeight="Bold"
                              Foreground="#2c3e50"
                              Margin="0,0,0,10"/>

                    <ListView x:Name="lstShiftUsers" 
                             Grid.Row="1" 
                             BorderThickness="0"
                             Background="Transparent"
                             Margin="0,0,0,10">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#f8f9fa" CornerRadius="4" Padding="10" Margin="0,2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding user.lastname}" 
                                                       FontWeight="SemiBold"
                                                       Foreground="#2c3e50"/>
                                            <TextBlock Foreground="#7f8c8d" FontSize="12">
                                                <Run Text="{Binding user.firstname}"/>
                                                <Run Text=" "/>
                                                <Run Text="{Binding user.middlename}"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding user.userrole.namerole}" 
                                                       Foreground="#e74c3c"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"/>
                                        </StackPanel>

                                        <Border Grid.Column="1" CornerRadius="4" Background="#e74c3c">
                                            <Button Content="❌ Удалить" 
                                                    Background="Transparent"
                                                    Foreground="White"
                                                    Height="25"
                                                    Padding="8,0"
                                                    FontSize="11"
                                                    FontWeight="SemiBold"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    Click="RemoveFromShift_Click"
                                                    Tag="{Binding userlistid}"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <!-- Статистика -->
                    <Border Grid.Row="2" Background="#f8f9fa" CornerRadius="4" Padding="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="Всего: " FontWeight="SemiBold" Foreground="#2c3e50"/>
                                <TextBlock x:Name="txtTotalCount" Text="0" FontWeight="Bold" Foreground="#2c3e50"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="Организаторов: " FontWeight="SemiBold" Foreground="#2c3e50"/>
                                <TextBlock x:Name="txtOrganizersCount" Text="0" FontWeight="Bold" Foreground="#3498db"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <TextBlock Text="Техников: " FontWeight="SemiBold" Foreground="#2c3e50"/>
                                <TextBlock x:Name="txtTechniciansCount" Text="0" FontWeight="Bold" Foreground="#e74c3c"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Кнопки -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1" CornerRadius="4" Background="#95a5a6" Margin="0,0,10,0">
                <Button x:Name="btnCancel" 
                        Content="Отмена" 
                        Background="Transparent"
                        Foreground="White"
                        Height="40"
                        Padding="20,0"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnCancel_Click"/>
            </Border>

            <Border Grid.Column="2" CornerRadius="4" Background="#27ae60">
                <Button x:Name="btnSave" 
                        Content="Сохранить изменения" 
                        Background="Transparent"
                        Foreground="White"
                        Height="40"
                        Padding="20,0"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnSave_Click"/>
            </Border>
        </Grid>
    </Grid>
</Window>
