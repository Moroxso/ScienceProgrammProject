<Window x:Class="ScienceProgrammProject.UI.Windows.EditOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScienceProgrammProject.UI.Windows"
        mc:Ignorable="d"
        Title="EditOrderWindow" Height="720" Width="800"        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Background="#ecf0f1" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,10">
            <TextBlock x:Name="txtTitle" 
                      Text="Редактирование заказа" 
                      FontSize="18" 
                      FontWeight="Bold"
                      Foreground="#2c3e50"
                      HorizontalAlignment="Center"/>
        </Border>

        <!-- Форма -->
        <Border Grid.Row="1" Background="White" CornerRadius="8" Padding="30">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <!-- Название конференции -->
                    <TextBlock Text="Название конференции*" FontWeight="SemiBold" Foreground="#2c3e50"/>
                    <Border CornerRadius="4" BorderThickness="1" BorderBrush="#bdc3c7" Margin="0,5,0,15">
                        <TextBox x:Name="txtConferenceName" 
                                Padding="10" 
                                FontSize="14" 
                                BorderThickness="0"
                                Background="Transparent"/>
                    </Border>

                    <!-- Оборудование -->
                    <TextBlock Text="Требуемое оборудование*" FontWeight="SemiBold" Foreground="#2c3e50"/>
                    <Border CornerRadius="4" BorderThickness="1" BorderBrush="#bdc3c7" Margin="0,5,0,15">
                        <TextBox x:Name="txtEquipment" 
                                Padding="10" 
                                FontSize="14" 
                                BorderThickness="0"
                                Background="Transparent"/>
                    </Border>

                    <!-- Количество гостей -->
                    <TextBlock Text="Количество гостей*" FontWeight="SemiBold" Foreground="#2c3e50"/>
                    <Border CornerRadius="4" BorderThickness="1" BorderBrush="#bdc3c7" Margin="0,5,0,15">
                        <TextBox x:Name="txtGuestsCount" 
                                Padding="10" 
                                FontSize="14" 
                                BorderThickness="0"
                                Background="Transparent"/>
                    </Border>

                    <!-- Статус заказа -->
                    <TextBlock Text="Статус заказа*" FontWeight="SemiBold" Foreground="#2c3e50"/>
                    <Border CornerRadius="4" BorderThickness="1" BorderBrush="#bdc3c7" Margin="0,5,0,15">
                        <ComboBox x:Name="cmbOrderStatus" 
                                 Padding="10" 
                                 FontSize="14" 
                                 BorderThickness="0"
                                 Background="Transparent">
                            <ComboBoxItem Content="принят"/>
                            <ComboBoxItem Content="готовится"/>
                            <ComboBoxItem Content="готов"/>
                        </ComboBox>
                    </Border>

                    <!-- Статус оплаты -->
                    <TextBlock Text="Статус оплаты*" FontWeight="SemiBold" Foreground="#2c3e50"/>
                    <Border CornerRadius="4" BorderThickness="1" BorderBrush="#bdc3c7" Margin="0,5,0,15">
                        <ComboBox x:Name="cmbPaymentStatus" 
                                 Padding="10" 
                                 FontSize="14" 
                                 BorderThickness="0"
                                 Background="Transparent">
                            <ComboBoxItem Content="принят"/>
                            <ComboBoxItem Content="оплачен"/>
                        </ComboBox>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- Информация о заказе -->
        <Border Grid.Row="2" Background="#f8f9fa" CornerRadius="8" Padding="15" Margin="0,10,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock x:Name="txtOrderId" Text="ID заказа: #0" FontWeight="SemiBold" Foreground="#2c3e50"/>
                    <TextBlock x:Name="txtCreationDate" Text="Дата создания: " Foreground="#7f8c8d" FontSize="12"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Последнее изменение:" FontWeight="SemiBold" Foreground="#2c3e50" FontSize="12"/>
                    <TextBlock x:Name="txtLastModified" Text="только что" Foreground="#7f8c8d" FontSize="11"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Кнопки -->
        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Кнопка быстрого изменения статуса -->
            <Border Grid.Column="1" CornerRadius="4" Background="#3498db" Margin="0,0,10,0">
                <Button x:Name="btnMarkInProgress" 
                        Content="🔄 В работу" 
                        Background="Transparent"
                        Foreground="White"
                        Height="40"
                        Padding="15,0"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnMarkInProgress_Click"/>
            </Border>

            <Border Grid.Column="2" CornerRadius="4" Background="#27ae60" Margin="0,0,10,0">
                <Button x:Name="btnMarkReady" 
                        Content="✅ Готов" 
                        Background="Transparent"
                        Foreground="White"
                        Height="40"
                        Padding="15,0"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnMarkReady_Click"/>
            </Border>

            <Border Grid.Column="3" CornerRadius="4" Background="#95a5a6">
                <Button x:Name="btnSave" 
                        Content="💾 Сохранить" 
                        Background="Transparent"
                        Foreground="White"
                        Height="40"
                        Padding="15,0"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnSave_Click"/>
            </Border>

        </Grid>
    </Grid>
</Window>
