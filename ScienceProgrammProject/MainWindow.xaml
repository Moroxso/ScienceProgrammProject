<Window x:Class="ScienceProgrammProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScienceProgrammProject"
        mc:Ignorable="d"
        Title="Система управления научными конференциями" Height="1920" Width="1080" WindowStartupLocation="CenterScreen" WindowState="Maximized" WindowStyle="SingleBorderWindow">


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель инструментов -->
        <Border Grid.Row="0" Background="#2c3e50" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Логотип -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🎯" FontSize="20" Margin="0,0,10,0"/>
                    <TextBlock Text="Конференции+" 
                               Foreground="White" 
                               FontSize="18" 
                               FontWeight="Bold"/>
                </StackPanel>

                <!-- Основное меню навигации с анимированными кнопками -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                    <Button x:Name="btnDashboard" 
                            Content="🏠 Главная" 
                            Margin="0 0 15 0"
                            Style="{StaticResource AnimatedNavButton}"
                            Click="btnDashboard_Click"/>

                    <Button x:Name="btnOrders" 
                            Content="📋 Заказы" 
                            Margin="0 0 15 0"
                            Style="{StaticResource AnimatedNavButton}"
                            Click="btnOrders_Click"/>

                    <Button x:Name="btnShifts" 
                            Content="🕐 Смены" 
                            Margin="0 0 15 0"
                            Style="{StaticResource AnimatedNavButton}"
                            Click="btnShifts_Click"/>

                    <Button x:Name="btnUsers" 
                            Content="👥 Сотрудники" 
                            Style="{StaticResource AnimatedNavButton}"
                            Click="btnUsers_Click"/>
                </StackPanel>

                <!-- Информация о пользователе -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center">
                    <TextBlock x:Name="txtUserInfo" 
                               Text="Не авторизован" 
                               Foreground="White" 
                               Margin="0,0,15,0"
                               VerticalAlignment="Center"/>

                    <Button x:Name="btnLogout" 
                            Content="🚪 Выйти" 
                            Style="{StaticResource AnimatedDangerButton}"
                            Click="btnLogout_Click"
                            Visibility="Collapsed"
                            Width="80"
                            Margin="15 0 5 0"/>

                    <Button x:Name="btnLogin" 
                            Content="🔑 Войти" 
                            Width="80"
                            Margin="15 0 5 0"
                            Style="{StaticResource AnimatedPrimaryButton}"
                            Click="btnLogin_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Область контента для страниц -->
        <Frame x:Name="MainContentFrame"
               Grid.Row="1"
               NavigationUIVisibility="Hidden"
               Background="#ecf0f1"/>
    </Grid>
</Window>
