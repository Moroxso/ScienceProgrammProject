<Page x:Class="ScienceProgrammProject.UI.Pages.UsersPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ScienceProgrammProject.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UsersPage">

    <Grid Background="#d8d9e5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#afb1c6" Padding="20" Margin="10" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Text="Управление сотрудниками" 
                          FontSize="20" 
                          FontWeight="Bold"
                          Foreground="#252947"
                          VerticalAlignment="Center"/>

                <Button x:Name="btnAddUser" 
                        Content="➕ Добавить сотрудника" 
                        Style="{StaticResource SuccessButton}"
                        Cursor="Hand"
                        Click="btnAddUser_Click"
                        Margin="396,0,146,0"/>

                <Button x:Name="btnRefresh" 
                        Content="🔄 Обновить" 
                        Style="{StaticResource PrimaryButton}"
                        Cursor="Hand"
                        Click="btnRefresh_Click" Margin="613,0,0,0"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
            <ItemsControl x:Name="UsersItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource ModernCard}" CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding lastname}" 
                                               FontSize="16" 
                                               FontWeight="Bold"
                                               Foreground="#2c3e50"/>
                                    <TextBlock Text="{Binding firstname}" 
                                               FontSize="14"
                                               Foreground="#2c3e50"
                                               Margin="0,2,0,0"/>
                                    <TextBlock Text="{Binding middlename}" 
                                               FontSize="14"
                                               Foreground="#2c3e50"
                                               Margin="0,2,0,0"/>
                                    <TextBlock Text="{Binding userrole.namerole}" 
                                               Foreground="#7f8c8d"
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="{Binding login, StringFormat='Логин: {0}'}" 
                                               Foreground="#7f8c8d"/>
                                </StackPanel>

                                <Border Grid.Column="1" 
                                        CornerRadius="8" 
                                        Padding="8,4"
                                        Margin="0,0,10,0"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="{Binding status}" 
                                               Foreground="White" 
                                               FontWeight="Bold"
                                               FontSize="12"/>
                                </Border>

                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                    <Button Content="Уволить" 
                                            Style="{StaticResource DangerButton}"
                                            Cursor="Hand"
                                            Click="FireEmployee"
                                            Tag="{Binding userid}"
                                            Margin="0,0,5,0"/>

                                    <Button Content="Изменить" 
                                            Style="{StaticResource PrimaryButton}"
                                            Cursor="Hand"
                                            Click="EditEmployee"
                                            Tag="{Binding userid}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <TextBlock x:Name="txtNoUsers" 
                   Grid.Row="1"
                   Text="Нет сотрудников" 
                   FontSize="16"
                   Foreground="#7f8c8d"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="Collapsed"/>
    </Grid>
</Page>