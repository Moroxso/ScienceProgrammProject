<Page x:Class="ScienceProgrammProject.UI.Pages.ShiftsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ScienceProgrammProject.UI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ShiftsPage">

    <Grid Background="#d8d9e5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#afb1c6" Padding="20" Margin="10" CornerRadius="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                          Text="Управление сменами" 
                          FontSize="20" 
                          FontWeight="Bold"
                          Foreground="#252947"
                          VerticalAlignment="Center"/>

                <Button x:Name="btnCreateShift" 
                        Content="➕ Создать смену" 
                        Style="{StaticResource SuccessButton}"
                        Cursor="Hand"
                        Click="btnCreateShift_Click" Grid.ColumnSpan="2" Margin="594,0,0,0"/>
            </Grid>
        </Border>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10">
            <ItemsControl x:Name="ShiftsItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{StaticResource ModernCard}" CornerRadius="8">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding datestart, StringFormat='Начало: {0:dd.MM.yyyy}'}" 
                                               FontSize="16" 
                                               FontWeight="Bold"
                                               Foreground="#2c3e50"/>
                                    <TextBlock Text="{Binding dateend, StringFormat='Окончание: {0:dd.MM.yyyy}'}" 
                                               FontSize="14"
                                               Foreground="#2c3e50"
                                               Margin="0,5,0,0"/>
                                    <TextBlock Text="Сотрудники на смене:" 
                                               Foreground="#7f8c8d"
                                               Margin="0,10,0,0"
                                               FontWeight="SemiBold"/>

                                    <ItemsControl x:Name="ShiftUsersItemsControl" 
                                                  ItemsSource="{Binding userlist}"
                                                  Margin="0,5,0,0">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding user.lastname}" 
                                                           Foreground="#7f8c8d"
                                                           Margin="0,2,0,0"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>

                                <TextBlock Grid.Column="1" 
                                           Text="{Binding shiftid, StringFormat='ID: {0}'}" 
                                           Foreground="#bdc3c7"
                                           FontSize="12"
                                           VerticalAlignment="Top"
                                           Margin="0,0,10,0"/>

                                <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center">
                                    <Button Content="Назначить сотрудников" 
                                            Style="{StaticResource PrimaryButton}"
                                            Cursor="Hand"
                                            Click="AssignEmployees"
                                            Tag="{Binding shiftid}"
                                            Margin="0,0,0,5"/>

                                    <Button Content="Удалить смену" 
                                            Style="{StaticResource DangerButton}"
                                            Cursor="Hand"
                                            Click="DeleteShift"
                                            Tag="{Binding shiftid}"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <TextBlock x:Name="txtNoShifts" 
                   Grid.Row="1"
                   Text="Нет активных смен" 
                   FontSize="16"
                   Foreground="#7f8c8d"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Visibility="Collapsed"/>
    </Grid>
</Page>