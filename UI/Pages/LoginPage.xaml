<Page x:Class="ScienceProgrammProject.UI.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ScienceProgrammProject.UI.Pages"
      mc:Ignorable="d"
      d:DesignHeight="600" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="#d8d9e5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.Row="1"
                Background="#afb1c6"
                CornerRadius="10"
                Padding="40"
                Margin="50"
                BorderBrush="#bdc3c7"
                BorderThickness="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="400">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="15" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Вход в систему"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#252947"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"
                           FontFamily="Arial Black" />

                <Border Grid.Row="2"
                        Background="#9fa0b0"
                        CornerRadius="8"
                        BorderBrush="#bdc3c7"
                        BorderThickness="1"
                        Padding="0"
                        Margin="0,0,0,5"
                        HorizontalAlignment="Stretch">
                    <TextBox x:Name="txtLogin"
                             Height="40"
                             FontSize="14"
                             Padding="10"
                             VerticalContentAlignment="Center"
                             HorizontalAlignment="Stretch"
                             BorderThickness="0"
                             Background="Transparent"
                             TextChanged="TxtLogin_TextChanged"
                             FontWeight="Bold" />
                </Border>

                <TextBlock x:Name="lbPlaceholder"
                           Grid.Row="2"
                           Text="Логин"
                           Foreground="#5f606b"
                           FontSize="14"
                           Margin="20,-5,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"
                           FontStyle="Italic"
                           FontFamily="Arial"
                           FontWeight="Bold" />

                <Border Grid.Row="4"
                        Background="#9fa0b0"
                        CornerRadius="8"
                        BorderBrush="#bdc3c7"
                        BorderThickness="1"
                        Padding="0"
                        Margin="0,0,0,5"
                        HorizontalAlignment="Stretch">
                    <PasswordBox x:Name="txtPassword"
                                 Height="40"
                                 FontSize="14"
                                 Padding="10"
                                 VerticalContentAlignment="Center"
                                 HorizontalAlignment="Stretch"
                                 BorderThickness="0"
                                 Background="Transparent"
                                 PasswordChanged="TxtPassword_PasswordChanged" />
                </Border>

                <TextBlock x:Name="pbPlaceholder"
                           Grid.Row="4"
                           Text="Пароль"
                           Foreground="#5f606b"
                           FontSize="14"
                           Margin="20,-5,0,0"
                           VerticalAlignment="Center"
                           IsHitTestVisible="False"
                           FontFamily="Arial"
                           FontWeight="Bold"
                           FontStyle="Italic" />

                <TextBlock x:Name="txtError"
                           Grid.Row="6"
                           Text=""
                           Foreground="#FFA02222"
                           FontSize="13"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"
                           HorizontalAlignment="Center"
                           FontWeight="Bold"
                           FontStyle="Italic"
                           FontFamily="Arial" />

                <Button x:Name="btnLogin"
                        Grid.Row="8"
                        Content="Войти"
                        Style="{StaticResource LoginButton}"
                        Click="btnLogin_Click"
                        Cursor="Hand" />
            </Grid>
        </Border>

        <Border x:Name="loadingOverlay"
                Grid.Row="0"
                Grid.RowSpan="3"
                Background="#80000000"
                Visibility="Collapsed">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <ProgressBar IsIndeterminate="True"
                             Width="100"
                             Height="10"
                             Margin="0,0,0,20" />
                <TextBlock Text="Проверка данных..."
                           Foreground="White"
                           FontSize="14"
                           HorizontalAlignment="Center" />
            </StackPanel>
        </Border>
    </Grid>
</Page>