<Window x:Class="ScienceProgrammProject.UI.Windows.AssignToShiftWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScienceProgrammProject.UI.Windows"
        mc:Ignorable="d"
        Title="Назначение сотрудников на смену" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Background="#d8d9e5" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#afb1c6" CornerRadius="10" Padding="20" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtTitle" 
                          Text="Назначение сотрудников на смену" 
                          FontSize="18" 
                          FontWeight="Bold"
                          Foreground="#252947"
                          VerticalAlignment="Center"/>

                <Border Grid.Column="1" CornerRadius="8" Background="#252947" Padding="10,6">
                    <TextBlock x:Name="txtShiftInfo" 
                              Text="Смена #0" 
                              Foreground="White" 
                              FontWeight="Bold"
                              FontSize="12"/>
                </Border>
            </Grid>
        </Border>

        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#afb1c6" CornerRadius="10" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Доступные сотрудники" 
                              FontSize="16" 
                              FontWeight="Bold"
                              Foreground="#252947"
                              Margin="0,0,0,10"/>

                    <ListView x:Name="lstAvailableUsers" 
                             Grid.Row="1" 
                             BorderThickness="0"
                             Background="Transparent">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource ModernCard}" CornerRadius="8" Padding="15" Margin="0,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding lastname}" 
                                                       FontWeight="SemiBold"
                                                       Foreground="#2c3e50"/>
                                            <TextBlock Foreground="#7f8c8d" FontSize="12">
                                                <Run Text="{Binding firstname}"/>
                                                <Run Text=" "/>
                                                <Run Text="{Binding middlename}"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding userrole.namerole}" 
                                                       Foreground="#3498db"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"/>
                                        </StackPanel>

                                        <Border Grid.Column="1" CornerRadius="8" Background="#27ae60">
                                            <Button Content="➕ Добавить" 
                                                    Background="Transparent"
                                                    Foreground="White"
                                                    Height="30"
                                                    Padding="12,0"
                                                    FontSize="11"
                                                    FontWeight="SemiBold"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    Click="AddToShift_Click"
                                                    Tag="{Binding userid}"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </Grid>
            </Border>

            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="#bdc3c7"/>

            <Border Grid.Column="2" Background="#afb1c6" CornerRadius="10" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Сотрудники на смене" 
                              FontSize="16" 
                              FontWeight="Bold"
                              Foreground="#252947"
                              Margin="0,0,0,10"/>

                    <ListView x:Name="lstShiftUsers" 
                             Grid.Row="1" 
                             BorderThickness="0"
                             Background="Transparent"
                             Margin="0,0,0,10">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border Style="{StaticResource ModernCard}" CornerRadius="8" Padding="15" Margin="0,5">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding user.lastname}" 
                                                       FontWeight="SemiBold"
                                                       Foreground="#2c3e50"/>
                                            <TextBlock Foreground="#7f8c8d" FontSize="12">
                                                <Run Text="{Binding user.firstname}"/>
                                                <Run Text=" "/>
                                                <Run Text="{Binding user.middlename}"/>
                                            </TextBlock>
                                            <TextBlock Text="{Binding user.userrole.namerole}" 
                                                       Foreground="#e74c3c"
                                                       FontSize="11"
                                                       FontWeight="SemiBold"/>
                                        </StackPanel>

                                        <Border Grid.Column="1" CornerRadius="8" Background="#e74c3c">
                                            <Button Content="❌ Удалить" 
                                                    Background="Transparent"
                                                    Foreground="White"
                                                    Height="30"
                                                    Padding="12,0"
                                                    FontSize="11"
                                                    FontWeight="SemiBold"
                                                    BorderThickness="0"
                                                    Cursor="Hand"
                                                    Click="RemoveFromShift_Click"
                                                    Tag="{Binding userlistid}"/>
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <Border Grid.Row="2" Background="#9fa0b0" CornerRadius="8" Padding="15">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="Всего: " FontWeight="SemiBold" Foreground="#252947"/>
                                <TextBlock x:Name="txtTotalCount" Text="0" FontWeight="Bold" Foreground="#252947"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <TextBlock Text="Организаторов: " FontWeight="SemiBold" Foreground="#252947"/>
                                <TextBlock x:Name="txtOrganizersCount" Text="0" FontWeight="Bold" Foreground="#40498f"/>
                            </StackPanel>

                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <TextBlock Text="Техников: " FontWeight="SemiBold" Foreground="#252947"/>
                                <TextBlock x:Name="txtTechniciansCount" Text="0" FontWeight="Bold" Foreground="#902929"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1" CornerRadius="8" Background="#95a5a6" Margin="0,0,10,0">
                <Button x:Name="btnCancel" 
                        Content="Отмена" 
                        Background="Transparent"
                        Foreground="White"
                        Height="40"
                        Padding="20,0"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnCancel_Click"/>
            </Border>

            <Button x:Name="btnSave" 
                    Grid.Column="2"
                    Content="Сохранить изменения" 
                    Style="{StaticResource SuccessButton}"
                    Cursor="Hand"
                    Click="btnSave_Click"/>
        </Grid>
    </Grid>
</Window>