<Window x:Class="ScienceProgrammProject.UI.Windows.AddUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScienceProgrammProject.UI.Windows"
        mc:Ignorable="d"
        Title="Добавление сотрудника" Height="781" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="ButtonLikeComboBox" TargetType="ComboBox">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="10"/>
        </Style>

        <Style x:Key="ComboBoxItemStyle" TargetType="ComboBoxItem">
            <Setter Property="Background" Value="#3498db"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2980b9"/>
                </Trigger>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#21618c"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#d8d9e5" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#afb1c6" CornerRadius="10" Padding="20" Margin="0,0,0,10">
            <TextBlock Text="Добавление нового сотрудника" 
                      FontSize="18" 
                      FontWeight="Bold"
                      Foreground="#252947"
                      HorizontalAlignment="Center"/>
        </Border>

        <Border Grid.Row="1" Background="#afb1c6" CornerRadius="10" Padding="30">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>

                    <TextBlock Text="Фамилия*" FontWeight="SemiBold" Foreground="#252947" Margin="0,0,0,5"/>
                    <Border CornerRadius="8" BorderThickness="1" BorderBrush="#bdc3c7" Background="#8a8b9a" Margin="0,0,0,15">
                        <TextBox x:Name="txtLastName" 
                                Height="40"
                                Padding="10" 
                                FontSize="14" 
                                BorderThickness="0"
                                Background="Transparent"
                                FontWeight="Bold"
                                VerticalContentAlignment="Center"/>
                    </Border>

                    <TextBlock Text="Имя*" FontWeight="SemiBold" Foreground="#252947" Margin="0,0,0,5"/>
                    <Border CornerRadius="8" BorderThickness="1" BorderBrush="#bdc3c7" Background="#8a8b9a" Margin="0,0,0,15">
                        <TextBox x:Name="txtFirstName" 
                                Height="40"
                                Padding="10" 
                                FontSize="14" 
                                BorderThickness="0"
                                Background="Transparent"
                                FontWeight="Bold"
                                VerticalContentAlignment="Center"/>
                    </Border>

                    <TextBlock Text="Отчество*" FontWeight="SemiBold" Foreground="#252947" Margin="0,0,0,5"/>
                    <Border CornerRadius="8" BorderThickness="1" BorderBrush="#bdc3c7" Background="#8a8b9a" Margin="0,0,0,15">
                        <TextBox x:Name="txtMiddleName" 
                                Height="40"
                                Padding="10" 
                                FontSize="14" 
                                BorderThickness="0"
                                Background="Transparent"
                                FontWeight="Bold"
                                VerticalContentAlignment="Center"/>
                    </Border>

                    <TextBlock Text="Логин*" FontWeight="SemiBold" Foreground="#252947" Margin="0,0,0,5"/>
                    <Border CornerRadius="8" BorderThickness="1" BorderBrush="#bdc3c7" Background="#8a8b9a" Margin="0,0,0,15">
                        <TextBox x:Name="txtLogin" 
                                Height="40"
                                Padding="10" 
                                FontSize="14" 
                                BorderThickness="0"
                                Background="Transparent"
                                FontWeight="Bold"
                                VerticalContentAlignment="Center"/>
                    </Border>

                    <TextBlock Text="Пароль*" FontWeight="SemiBold" Foreground="#252947" Margin="0,0,0,5"/>
                    <Border CornerRadius="8" BorderThickness="1" BorderBrush="#bdc3c7" Background="#8a8b9a" Margin="0,0,0,15">
                        <PasswordBox x:Name="txtPassword" 
                                    Height="40"
                                    Padding="10" 
                                    FontSize="14" 
                                    BorderThickness="0"
                                    Background="Transparent"
                                    FontWeight="Bold"
                                    VerticalContentAlignment="Center"/>
                    </Border>

                    <TextBlock Text="Роль*" FontWeight="SemiBold" Foreground="#252947" Margin="0,0,0,5"/>
                    <Border CornerRadius="8" BorderThickness="1" BorderBrush="#bdc3c7" Background="#252947" Margin="0,0,0,15">
                        <ComboBox x:Name="cmbRole" 
                                 Height="40"
                                 Padding="10" 
                                 FontSize="14" 
                                 BorderThickness="0"
                                 Background="Transparent"
                                 FontWeight="SemiBold"
                                 Foreground="#252947"
                                 VerticalContentAlignment="Center"
                                 ItemContainerStyle="{StaticResource ComboBoxItemStyle}">
                            <ComboBoxItem Content="Заведующий подразделением" Tag="1"/>
                            <ComboBoxItem Content="Организатор" Tag="2" IsSelected="True"/>
                            <ComboBoxItem Content="Техник" Tag="3"/>
                        </ComboBox>
                    </Border>

                    <Border Background="#9fa0b0" CornerRadius="8" Padding="15" Margin="0,10,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" 
                                      Text="Сгенерировать случайный пароль" 
                                      Foreground="#252947"
                                      FontSize="12"
                                      FontWeight="SemiBold"
                                      VerticalAlignment="Center"/>

                            <Border Grid.Column="1" CornerRadius="8" Background="#252947">
                                <Button x:Name="btnGeneratePassword" 
                                        Content="🎲 Сгенерировать" 
                                        Background="Transparent"
                                        Foreground="White"
                                        Height="30"
                                        Padding="10,0"
                                        FontSize="12"
                                        FontWeight="SemiBold"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Click="btnGeneratePassword_Click"/>
                            </Border>
                        </Grid>
                    </Border>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1" CornerRadius="8" Background="#95a5a6" Margin="0,0,10,0">
                <Button x:Name="btnCancel" 
                        Content="Отмена" 
                        Background="Transparent"
                        Foreground="White"
                        Height="40"
                        Padding="20,0"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="btnCancel_Click"/>
            </Border>

            <Button x:Name="btnAdd" 
                    Grid.Column="2"
                    Content="Добавить сотрудника" 
                    Style="{StaticResource SuccessButton}"
                    Cursor="Hand"
                    Click="btnAdd_Click"/>
        </Grid>
    </Grid>
</Window>